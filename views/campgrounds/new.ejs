<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create New Lease Agreement</h1>
        <div style="margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for = "ownername">Owner Name: </label>
                        <input class="form-control" type="text" name="ownername" id="ownername" placeholder="Owner Name"> 
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ownerethaddr">Owner Eth Address: </label>
                        <input class="form-control" type="text" name="ownerethaddr" id="ownerethaddr" placeholder="Eth Address"> 
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="tenantname">Tenant Name: </label>
                        <input class="form-control" type="text" name="tenantname" id="tenantname" placeholder="Tenant Name"> 
                    </div>
                    <div class="form-group col-md-6">
                        <label for="tenantethaddr">Tenant Eth Address: </label>
                        <input class="form-control" type="text" name="tenantethaddr" id="tenantethaddr" placeholder="Eth Address"> 
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label for="location">Address</label>
                    <input type="text" class="form-control" name="location" id="location" placeholder="1234 Main St">
                </div>
                <div class="form-group col-md-12">
                    <label>Start Date:</label>
                    <input class="form-control" type="date" name="startdate" id="startdate" placeholder="Start Date">
                </div>
                <div class="form-group col-md-12">
                    <label for="rent">Rent per month (Eth): </label>
                    <input class="form-control" type="number" name="rent" id="rent" placeholder="Rent per month (in Eth)" step="50" min="0" required>
                </div>
                <div class="form-group col-md-12">
                    <label for="deposit">Total Deposit (Eth): </label>
                    <input class="form-control" type="number" name="deposit" id="deposit" placeholder="Total Deposit (in Eth)" step="50" min="0" required>
                </div>
                <div class="form-group col-md-12">
                    <label for="clauses">Contract Clause: </label>
                    <textarea class="form-control" rows="3" name="clause" id="clause" placeholder="Contract Clauses"></textarea>
                </div>
                <div class="form-group col-md-3">
                </div>
                <div class="form-group col-md-3">
                    <button style="text-align:center" class="btn btn-lg btn-primary btn-block">Create</button>
                </div>
            </form>
        </div>
        <div class="form-group col-md-3">
            <a class="btn btn-lg btn-primary btn-block" href="/campgrounds">Cancel</a>
        </div>
    </div>
<% include ../partials/footer %>

